doctype html
html
  head
    include ./includes/head
  body
    .row      
        h1= site.title
        p= site.description
      .large-8.columns
        block content
      .large-4.columns
        h3 Posts
        .list-group
        each post in collections.posts
          a.list-group-item(href=post.path)
            span.badge.badge-default= helpers.moment.utc(post.date).format('YYYY-MM-DD')
            = post.title
    include ./includes/footer